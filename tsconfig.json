{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 20",
  "compilerOptions": {
    "baseUrl": "src",
    "lib": [
      "dom",
      "dom.iterable",
      "ESNext"
    ],
    "outDir": "./lib",
    "module": "CommonJS",
    "target": "ES6",
    "strict": true,
    "allowJs": true,
    "sourceMap": false,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts"
  ]
}